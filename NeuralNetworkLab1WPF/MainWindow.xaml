<Window x:Class="NeuralNetworkLab1WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NeuralNetworkLab1WPF"
        mc:Ignorable="d"
        Title="Персептрон" Height="525" Width="525">
    <Grid>
        <TabControl x:Name="tabControl">
            <TabItem Header="Обучение">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="315" Margin="10,10,0,0" VerticalAlignment="Top" Width="100" SelectedIndex="0">
                        <ListBoxItem>
                            <Label x:Name="label1" Content="Модель 1" Width="80"/>
                        </ListBoxItem>
                        <ListBoxItem>
                            <Label x:Name="label2" Content="Модель 2" Width="80"/>
                        </ListBoxItem>
                        <ListBoxItem>
                            <Label x:Name="label3" Content="Модель 3" Width="80"/>
                        </ListBoxItem>
                    </ListBox>
                    <Grid Margin="160,60,0,0" ShowGridLines="False" HorizontalAlignment="Left" Width="190" Height="315" VerticalAlignment="Top">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <Grid.Resources>
                            <Style TargetType="Rectangle">
                                <Setter Property="Margin" Value="5"/>
                            </Style>
                        </Grid.Resources>
                        <Rectangle Fill="Black" HorizontalAlignment="Center" Stroke="Black" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0" Width="50" Height="50"/>
                        <Rectangle Fill="Black" HorizontalAlignment="Center" Stroke="Black" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1" Width="50" Height="50"/>
                        <Rectangle Fill="Black" HorizontalAlignment="Center" Stroke="Black" VerticalAlignment="Center" Grid.Row="0" Grid.Column="2" Width="50" Height="50"/>
                        <Rectangle Fill="Black" HorizontalAlignment="Center" Stroke="Black" VerticalAlignment="Center" Grid.Row="1" Grid.Column="0" Width="50" Height="50"/>
                        <Rectangle Fill="White" HorizontalAlignment="Center" Stroke="Black" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Width="50" Height="50"/>
                        <Rectangle Fill="White" HorizontalAlignment="Center" Stroke="Black" VerticalAlignment="Center" Grid.Row="1" Grid.Column="2" Width="50" Height="50"/>
                        <Rectangle Fill="Black" HorizontalAlignment="Center" Stroke="Black" VerticalAlignment="Center" Grid.Row="2" Grid.Column="0" Width="50" Height="50"/>
                        <Rectangle Fill="Black" HorizontalAlignment="Center" Stroke="Black" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" Width="50" Height="50"/>
                        <Rectangle Fill="Black" HorizontalAlignment="Center" Stroke="Black" VerticalAlignment="Center" Grid.Row="2" Grid.Column="2" Width="50" Height="50"/>
                        <Rectangle Fill="White" HorizontalAlignment="Center" Stroke="Black" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0" Width="50" Height="50"/>
                        <Rectangle Fill="White" HorizontalAlignment="Center" Stroke="Black" VerticalAlignment="Center" Grid.Row="3" Grid.Column="1" Width="50" Height="50"/>
                        <Rectangle Fill="Black" HorizontalAlignment="Center" Stroke="Black" VerticalAlignment="Center" Grid.Row="3" Grid.Column="2" Width="50" Height="50"/>
                        <Rectangle Fill="Black" HorizontalAlignment="Center" Stroke="Black" VerticalAlignment="Center" Grid.Row="4" Grid.Column="0" Width="50" Height="50"/>
                        <Rectangle Fill="Black" HorizontalAlignment="Center" Stroke="Black" VerticalAlignment="Center" Grid.Row="4" Grid.Column="1" Width="50" Height="50"/>
                        <Rectangle Fill="Black" HorizontalAlignment="Center" Stroke="Black" VerticalAlignment="Center" Grid.Row="4" Grid.Column="2" Width="50" Height="50"/>
                    </Grid>
                    <Button x:Name="button" Content="Добавить" HorizontalAlignment="Left" Margin="10,330,0,0" VerticalAlignment="Top" Width="100" Height="20"/>
                    <Button x:Name="button_Copy" Content="Удалить" HorizontalAlignment="Left" Margin="10,355,0,0" VerticalAlignment="Top" Width="100" Height="20"/>
                    <TextBox x:Name="textBox" HorizontalAlignment="Left" Height="23" Margin="160,32,0,0" TextWrapping="Wrap" Text="Модель 1" VerticalAlignment="Top" Width="190"/>
                </Grid>
            </TabItem>
            <TabItem Header="Тестирование">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
